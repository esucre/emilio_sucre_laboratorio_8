extends ./index.pug

    block formulario
      .col-md-5
        h1= "Agregar Estudiante"          
        .card
          .card-body
            form(method='POST' action='/agregar')
              form-group
                label Nombre:
                input.form-control(name='nombre' type='text')
              form-group
                label Edad:
                input.form-control(name='edad' type='text')
              br
              input.btn.btn-primary(type='submit' value='Enviar')