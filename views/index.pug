extends ./layout.pug

block content
  .container
    .row
      include ./edit_student.pug
      
      .col-md-7
        h1= "Consultar Estudiantes"    
        table.table.table-hover.table-bordered
          thead
            tr
              th(scope='col') #
              th(scope='col') ID
              th(scope='col') Nombre
              th(scope='col') Edad
              th(scope='col') 
          tbody
            each estudiante, i in estudiantes
              tr
                th(scope='row')= i+1 
                td= estudiante._id
                td= estudiante.nombre
                td= estudiante.edad
                td 
                  a.btn.btn-dark.editar(data-estudianteid=estudiante._id href=`/editar/${estudiante._id}`) Editar
                  a.btn.btn-danger.borrar(data-estudianteid=estudiante._id href=`/eliminar/${estudiante._id}` onclick="return confirm('Â¿Deseas eliminar este registro?');") Eliminar


