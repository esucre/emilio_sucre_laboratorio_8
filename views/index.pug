extends ./layout.pug

block content

  h1 #{title}
  ul.list-group
   
      //- li.list-group-item= estudiante._id+" - "+estudiante.nombre+" - "+estudiante.edad
  table.table
    thead
      tr
        th(scope='col') #
        th(scope='col') ID
        th(scope='col') Nombre
        th(scope='col') Edad
    tbody
     each estudiante, i in estudiantes
        tr
          th(scope='row')= i+1 
          td= estudiante._id
          td= estudiante.nombre
          td= estudiante.edad

